@model IEnumerable<NewSIGASE.Dto.Response.UsuarioListaDto>

@{
    ViewData["Title"] = "Index";
}
<script>
    function abrirEditar(codigo) {
        window.location = window.origin + "\\usuarios\\edit\\" + codigo;
    }

</script>
<h3>Usuários</h3>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th style="text-align:center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer">
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Matricula)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Perfil)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td style="text-align:center">
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div>
    <a class="btn btn-success" style="margin-left: 91%" asp-action="Create">Novo</a>
</div>