@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="~/css/LoginStyles/login.css" rel="stylesheet" />
<script src="~/js/LoginJs/LoginJs.js"></script>
<div class="container">
    <div class="logo">
        <img class="imagen" src="~/css/Imagens/Logo.png" />
    </div>
    <div class="simple-login-container">
        <h2>Recuperar Senha</h2>
        <div id="MSG">
            <p id="msgRetorno"></p>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <input id="inputEmail" type="text" class="form-control" placeholder="E-mail">
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-4 form-group">
                <button type="submit" onclick="recuperarSenha();" class="btn btn-block btn-success" placeholder="Enviar">Enviar</button>
            </div>
            <div class="col-md-4 form-group">
                <a class="btn btn-block btn-danger" href="/Login/Index">Retornar</a>
            </div>
        </div>
    </div>
</div>
