@model NewSIGASE.Dto.Request.UsuarioDto

@{
    ViewData["Title"] = "Create";
}

<h3>Cadastro de Usuário</h3>
<hr />
<div class="row formulario">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Nome</label>
                <div class="col-sm-9">
                    <input asp-for="Nome" class="form-control" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Matricula</label>
                <div class="col-sm-9">
                    <input asp-for="Matricula" class="form-control" />
                </div>
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">E-mail</label>
                <div class="col-sm-9">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Perfil</label>
                <div class="col-sm-9">
                    <select asp-for="Perfil" class="form-control" asp-items="@ViewBag.Perfil"></select>
                </div>
                <span asp-validation-for="Perfil" class="text-danger"></span>
            </div>
            <div class="class="btn-toolbar"" role="group">
                <div class="btn-group mr-lg-2">
                    <input class="btn btn-outline-success" type="submit" value="Salvar" />
                </div>
                <div class="btn-group">
                    <a class="btn btn-outline-info" asp-action="Index">Retornar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
