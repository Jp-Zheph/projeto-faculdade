@model NewSIGASE.Dto.Request.SenhaCriarDto

@{
    ViewData["Title"] = "Alterar Senha";
}

<h3>Alterar Senha</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AlterarSenha">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@ViewBag.UsuarioId"/>
            <div class="form-group">
                <label asp-for="SenhaAtual" class="control-label"></label>
                <input asp-for="SenhaAtual" class="form-control" data-toggle="password" type="password" />
                <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                <input type="checkbox" onclick="showPasswordAtual()"> <small> Mostrar Senha</small>
            </div>
            <div class="form-group">
                <label asp-for="SenhaNova" class="control-label"></label>
                <input asp-for="SenhaNova" class="form-control" data-toggle="password" type="password" />
                <span asp-validation-for="SenhaNova" class="text-danger"></span>
                <input type="checkbox" onclick="showPasswordNova()"> <small> Mostrar Senha</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar Senha" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function showPasswordAtual() {
        var senha = document.getElementById("SenhaAtual");
        if (senha.type === "password") {
            senha.type = "text";
        } else {
            senha.type = "password";
        }
    }

    function showPasswordNova() {
        var senha = document.getElementById("SenhaNova");
        if (senha.type === "password") {
            senha.type = "text";
        } else {
            senha.type = "password";
        }
    }
</script>

