@model NewSIGASE.Dto.Request.SalaDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sala</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo da Sala</label>
