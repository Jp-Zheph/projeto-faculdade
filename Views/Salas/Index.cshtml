@model IEnumerable<NewSIGASE.Dto.Response.SalaListaDto>

@{
    ViewData["Title"] = "Index";
}
<script>
    function abrirEditar(codigo) {
        window.location = window.origin + "\\equipamentos\\edit\\" + codigo;
    }

</script>
<h3>Salas </h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tipo de Sala")
            </th>
            <th>
                @Html.DisplayName("Nº Sala")
            </th>
            <th>
                @Html.DisplayName("Capacidade")
            </th>
            <th>
                @Html.DisplayName("Quantidade Equipamentos")
            </th>
            <th>
                @Html.DisplayName("Área")
            </th>
            <th>
                @Html.DisplayName("Andar")
            </th>
            <th style="text-align:center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor: pointer">
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.IdentificadorSala)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.CapacidadeAlunos)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.QuantidadeEquipamentos)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td onclick="abrirEditar('@item.Id')">
                    @Html.DisplayFor(modelItem => item.Andar)
                </td>
                <td style="text-align:right">
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div>
    <a class="btn btn-success" style="margin-left: 94%" asp-action="Create">Novo</a>
</div>